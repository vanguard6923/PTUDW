@model Harmic.Models.TbMenu

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Xóa menu</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Home</a></li>
						<li class="breadcrumb-item active">General Form</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<!-- left column -->
				<div class="col-md-12">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Xóa menu</h3>
						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form asp-action="Delete">
							<div class="card-body">
								<div class="form-group">
									<label class="control-label">Tiêu đề</label>
									@Html.DisplayFor(Model=>Model.Title)
								</div><div class="form-group">
									<label class="control-label">Alias</label>
									@Html.DisplayFor(Model=>Model.Alias)
								</div><div class="form-group">
									<label class="control-label">Mô tả</label>
									@Html.DisplayFor(Model=>Model.Description)
								</div><div class="form-group">
									<label class="control-label">Mức</label>
									@Html.DisplayFor(Model=>Model.Levels)
								</div><div class="form-group">
									<label class="control-label">Menu cha</label>
									@Html.DisplayFor(Model=>Model.ParentId)
								</div><div class="form-group">
									<label class="control-label">Hiện</label>
									@Html.DisplayFor(Model=>Model.IsActive)
								</div>
							</div>
							<!-- /.card-body -->

							<div class="card-footer">
								<button type="submit" class="btn btn-danger">Xóa menu</button>
								<button asp-action="Index" type="submit" class="btn btn-primary">Quay lại</button>
							</div>
						</form>
					</div>
					<!-- /.card -->
				</div>
				<!--/.col (left) -->
			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>